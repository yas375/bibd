<!DOCTYPE html>
<html>
  <head>
    <title>Ильюкевич Виктор, гр. 700621с</title>
    <%= stylesheet_link_tag "application" %>
    <%= formtastic_stylesheet_link_tag %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <ul>
        <li><b><%= link_to 'Состояние склада', root_path %></b></li>
        <li><%= link_to 'Магазины', stores_path %></li>
        <li><%= link_to 'Поставщики товара', suppliers_path %></li>
        <li><%= link_to 'Товары, с которыми ведётся работа', products_path %></li>
      </ul>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
